<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background2" />

    <ImageButton
        android:id="@+id/backpdf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:foreground="@drawable/back_arrow_left_icon"
        android:foregroundGravity="fill"
        android:background="@drawable/back_button_background"
        android:padding="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF uploading"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="195dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/darkgrey"
            app:icon="@drawable/upload"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_below="@+id/up"
            android:text="Choose :"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/op_spinner"
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/general"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:text="General Summary"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="195dp"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/terms"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:text="Definition Extractor"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="195dp"
            android:layout_marginTop="160dp"
            android:layout_toRightOf="@id/general"
            android:layout_centerHorizontal="false" />
        <Button
            android:id="@+id/math"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:text="Math Rule Summary"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="195dp"
            android:layout_toLeftOf="@id/general"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/question"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:text="QA Extractor"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="195dp"
            android:layout_below="@id/general"
            android:layout_marginLeft="100dp" />
        <Button
            android:id="@+id/compression"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:text="Summary Compressor"
            tools:layout_editor_absoluteX="133dp"
            android:layout_below="@id/general"
            tools:layout_editor_absoluteY="195dp"
            android:layout_toRightOf="@id/question" />

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:text="Output will be displayed here"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:gravity="center" />


    </RelativeLayout>
</RelativeLayout>