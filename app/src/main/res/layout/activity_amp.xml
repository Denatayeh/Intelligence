<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".amp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background2" />
    <ImageButton
        android:id="@+id/backamp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:foreground="@drawable/back_arrow_left_icon"
        android:foregroundGravity="fill"
        android:background="@drawable/back_button_background"
        android:padding="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/sd"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Salah Eldeen Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/alfarouk"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Al Farouq Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/alkarama"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Al Karamah Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/alfarabi"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Al Farabi Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/sh"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Arar Hall (Science 1)"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/is"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Ibn Sina Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/saed"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Prof. Sa'ad Hijazi Hall (Science 2)"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/n"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Nursing Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    <Button
        android:id="@+id/m"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Medicine Hall"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="229dp" />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>