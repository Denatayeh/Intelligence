<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background1" />

    <ImageView
        android:layout_width="101.5dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/wintelligence" />

    <Button
        android:id="@+id/loc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="University locations"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/locic" />

    <Button
        android:id="@+id/acr"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Academic Resources"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/acr" />

    <Button
        android:id="@+id/gpa"
        android:layout_width="250dp"
        android:text="GPA calculator"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:icon="@drawable/calcic"/>

    <Button
        android:id="@+id/insta"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Instagram page"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/inst" />

    <Button
        android:id="@+id/group"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Facebook group"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/fbit" />

    <Button
        android:id="@+id/tp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CS and AI plans"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/plic" />

    <Button
        android:id="@+id/yt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Youtube channel"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/ytic" />

    <Button
        android:id="@+id/as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="208dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:fabSize="normal"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toStartOf="@+id/bot_btn"
        app:icon="@drawable/bot3"
        app:iconTint="@color/white"/>

    <ImageButton
        android:id="@+id/bot_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="11dp"
        android:textColor="@color/white"
        android:background="@drawable/back_button_background"
        android:foreground="@drawable/bot4"
        android:scaleType="fitCenter"
        android:foregroundTint="@color/white"/>

    <ImageButton
        android:id="@+id/pdf_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="11dp"
        android:textColor="@color/white"
        android:background="@drawable/back_button_background"
        android:foreground="@drawable/filetype_pdf_icon"
        android:scaleType="fitCenter"
        android:foregroundTint="@color/white"/>


    <ImageButton
        android:id="@+id/language"
        android:visibility="visible"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/back_button_background"
        android:foreground="@drawable/arabic"
        android:foregroundTint="@color/white"
        android:foregroundGravity="fill"
        android:background="@drawable/back_button_background"
        android:padding="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"/>

</RelativeLayout>
